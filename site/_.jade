doctype html

block vars
  - var subheader = ""

html(lang="en")
  head
    title
      | #{pkg.name}: 
      block title
        | #{pkg.description}

    block styles
      link(rel="stylesheet", href=bc + "highlightjs/styles/github.css")
      link(rel="stylesheet", href=root + "style.css")

    block page-styles

  body
    header
      block menu
        a(href=root) Overview
        a(href="https://github.com/tgdwyer/WebCola/wiki") Wiki
        a(href=root + "api") API
        a(href=pkg.repository.url) Repository

    block header
      if header
        h1= header
    block subheader
      if subheader
        h2= subheader

    #body
      block body

    block scripts
      script(src=bc + "highlightjs/highlight.pack.js")
      script.
        hljs.initHighlightingOnLoad();
      script(src=bc + "d3/d3.min.js")
      script(src=root + "cola.js")
      
    block page-scripts